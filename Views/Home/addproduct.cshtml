@model shopping.Models.prouduct

@{
    ViewBag.Title = "addDeals";
}


    <link rel="stylesheet" href="~/css/bootstrap.min.css"  type="text/css">
	
	<link rel="stylesheet" href="~/css/style4.css">
	
<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
	<div id="page-content" class="single-page">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<div class="heading"><h2>Add PRODUCT<h2></div>
	
@using (Html.BeginForm("addpro", "Admin", FormMethod.Post,
                               new { enctype = "multipart/form-data" }))
                               {
   
       @Html.ValidationSummary(true)
                 
                        	<div class="form-group editor-field">
                                NAME :
              @Html.TextBoxFor(model => model.name, new { @placeholder = "name",@class = "form-control",@style="width :100%" })
                        	@Html.ValidationMessageFor(Model=>Model.name)
                            </div>
                    
                        	<div class="form-group editor-field">
                                PRICE :
              @Html.TextBoxFor(model => model.price, new { @placeholder = "PRICE",@class = "form-control",@style="width :100%" })
                        	@Html.ValidationMessageFor(Model=>Model.price)
                            </div>
                    
                        	<div class="form-group editor-field">
                                Description :

              @Html.TextAreaFor(model => model.description, new { @placeholder = "decription",@class = "form-control",@style="width :auto" })
                        	@Html.ValidationMessageFor(Model=>Model.description)
                            </div>
    
    	<div class="form-group editor-field">
       Category :
                 @Html.DropDownList("list")
    </div>
                        	<div class="form-group editor-field">
			ADD IMAGE :
                                <p>
                                         <input  type="file" name ="file" / required>

                                </p>
                            </div>
    <div class="form-group editor-field">
            <button type="submit" class="btn btn-1">Create</button>
        </div>
}
                    </div>
                </div>
            </div>
        </div>

<div>
    @Html.ActionLink("Back to List", "Admin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
