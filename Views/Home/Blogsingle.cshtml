@model IEnumerable<shopping.Models.Comment>
<!DOCTYPE html>
  <html>
    <head>  
      |
        <link rel="stylesheet" href="~/css/bootstrap.min.css"  type="text/css">
      <link href="/css1/pro-bars.css" rel="stylesheet" type="text/css" media="all" />
      <!-- Owl Carousel -->
      <link href="~/css1/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>

      <!-- Font -->
     

    </head>    
       
    <body>
       
            <div class="container">
              <div class="row">
                <div class="col s12 m8 l8">
                  <div class="blog-content">
                    <div class="blog-image">
                         
                     <img src="@ViewBag.z">
                    </div>
                      <br />
                      </div>
                      </div>
                      </div>
          
                <div class="row">
				<div class="col-md-6">
                  @ViewBag.s
     
    </div>
   
                    </div>
               
                  <!-- Start Comments -->
                  <div class="row">
                    <div class="col s12">
                      <div class="comments-area">
                        <h3 class="comments-title">@ViewBag.t comments</h3>
                        <div class="comments">
                     @foreach (var item in Model)
               {  
		  
                            <ul class="commentlist">
                            <li>
                                 <div class="media">
                               
                                <div class="media-body">
                                 <h4 class="author-name">@item.name</h4>
                                 <span class="comments-date"> @DateTime.Now</span>
                                <p>@item.subject</p></div>
                              </div>
                            </li>
                 </ul>
                  
                     }
                        </div>
        </div>
         
 @using (Html.BeginForm("addcoment", "Home", FormMethod.Post,
                               new { enctype = "multipart/form-data" }))
        
        
                               {
     <br />
     	<div class="container">
			<div class="row">
              	<div class="form-group editor-field">
          ENTER YOUR NAME :
                         <input type="text" name="name" id="name"  class = "form-control"/><br />
                        	@Html.ValidationMessage("name")
                            </div>
                             	<div class="form-group editor-field">
                          <input type="hidden" name ="id" value="@ViewBag.n" />
             ENTER COMMENT :
                                      @Html.TextArea("comment", new { @class = "form-control",@style="width :100%" })
                        	@Html.ValidationMessage("comment")
                            </div>
                </div> </div>    
   
     <button class="btn">Upload</button>
 }
                    </div>
      </div>
                  <!-- Start Pagination -->
         

      <!-- Custom Js -->
      <script src="js/custom.js"></script>      
    </body>
  </html>