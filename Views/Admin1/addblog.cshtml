@model shopping.Models.blog

@{
    ViewBag.Title = "addblog";
}

    <link rel="stylesheet" href="~/css/bootstrap.min.css"  type="text/css">
	
	<link rel="stylesheet" href="~/css/style4.css">
	
 <div class="jumbotron">
                    <h1>ADD A Blog !</h1>
                </div>
<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
	<div id="page-content" class="single-page">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
@using (Html.BeginForm("addblog", "Admin", FormMethod.Post,
                               new { enctype = "multipart/form-data" }))
                               {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>blog</legend>

       	<div class="form-group editor-field">
                                NAME :
              @Html.TextBoxFor(model => model.name, new { @placeholder = "name",@class = "form-control",@style="width :100%" })
                        	@Html.ValidationMessageFor(Model=>Model.name)
                            </div>
                    
       
    	<div class="form-group editor-field">
       Category :
                 @Html.DropDownList("list")
    </div>
                        	<div class="form-group editor-field">
			ADD IMAGE :
                                <p>
                                         <input  type="file" name ="file" / required>

                                </p>
                            </div>
    
                        	<div class="form-group editor-field">
                                NAME :
              @Html.TextAreaFor(model => model.subject, new { @placeholder = "SUBJECT",@class = "form-control",@style="width :100%" })
                        	@Html.ValidationMessageFor(Model=>Model.subject)
                            </div>
                    
                        
        
    <div class="form-group editor-field">
            <button type="submit" class="btn btn-1">Create</button>
        </div></fieldset>
}
                    </div></div></div></div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
