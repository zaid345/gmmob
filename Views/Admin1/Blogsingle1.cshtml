
@model IEnumerable<shopping.Models.Comment>
<!DOCTYPE html>
  <html>
    <head>  
      <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
      <title></title>

       <!-- CSS  -->      
      <link rel="stylesheet" href="~/css/bootstrap.min.css"  type="text/css">
      <link href="/css1/pro-bars.css" rel="stylesheet" type="text/css" media="all" />
      <!-- Owl Carousel -->
      <link href="~/css1/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>

        <link rel="stylesheet" href="~/css/bootstrap.min.css"  type="text/css">
        <link href="/css1/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
      <!-- Font Awesome -->
      <!-- Skill Progress Bar -->
      <link href="/css1/pro-bars.css" rel="stylesheet" type="text/css" media="all" />
      <!-- Owl Carousel -->
      <link rel="stylesheet" href="/css1/owl.carousel.css">
      <!-- Default Theme CSS File-->
      <link id="switcher" href="/css1/themes/default-theme.css" type="text/css" rel="stylesheet" media="screen,projection"/>     
      <!-- Main css File -->
      <link href="~/css1/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>

      <!-- Font -->
     

    </head>    
       
    <body>
        <!-- BEGAIN PRELOADER -->         
    <br />
    <br /><br />  <div class="row">
                <div class="col s12 m8 l8">
                  <div class="blog-content">
                    <div class="blog-image">
                         
                     <img src="@ViewBag.z" height="300" width="275" alt="" >
                    </div>
                      <br />
                      </div>
                      </div>
                      </div>
          
                <div class="row">
				<div class="col-md-6">
                  @ViewBag.s
     
    </div>
   
                    </div>
               
                  <!-- Start Comments -->
                  <div class="row">
                    <div class="col s12">
                      <div class="comments-area">
                           <h3 class="comments-title">@ViewBag.k "comment"</h3>
                        <div class="comments">
                     @foreach (var item in Model)
               {  
		  
                            <ul class="commentlist">
                            <li>
                                 <div class="media">
                               
                                <div class="media-body">
                                 <h4 class="author-name">@item.name</h4>
                                 <span class="comments-date"> @DateTime.Now</span>
                                <p>@item.subject</p></div>
                              </div>
                                 @Html.ActionLink("DELETE ", "deleteComment",new { id=item.Id }, new { @class = "btn btn-default" })
                   
                            </li>
                 </ul>
                  
                     }
                        </div>
        </div>      </div>
      </div>
                  <!-- Start Pagination -->
        
      </div>
      <!-- jQuery Library -->
      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <!-- Materialize js -->
      <script type="text/javascript" src="js/materialize.min.js"></script>
      <!-- Skill Progress Bar -->
      <script src="js/appear.min.js" type="text/javascript"></script>
      <script src="js/pro-bars.min.js" type="text/javascript"></script>
      <!-- Owl slider -->      
      <script src="js/owl.carousel.min.js"></script>    
      <!-- Mixit slider  -->
      <script src="http://cdn.jsdelivr.net/jquery.mixitup/latest/jquery.mixitup.min.js"></script>
      <!-- counter -->
      <script src="js/waypoints.min.js"></script>
      <script src="js/jquery.counterup.min.js"></script>     

      <!-- Custom Js -->
      <script src="js/custom.js"></script>      
    </body>
  </html>