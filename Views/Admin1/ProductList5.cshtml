
@using PagedList.Mvc
@model PagedList.IPagedList<shopping.Models.blog>

<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
		  
  <div class="clear"> </div>
		    <div class="wrap">
		    <div class="content">
		    <div class="content-grids">
       @foreach (var item in Model)
               {  
		
		    	<div class="blog">
		    		<div class="blog-grid">
		    			<h4>Blog</h4>
		    			<div class="blog-grid-header">
		    				<h1>@item.name</h1>
                            <h3>@item.category</h3>
		    				
                            <ul>
		    					<li><img src="~/images//cal.png" alt=""><a href="#">@item.date</a></li>
		    					<li><img src="~/images//admin.png" alt=""><a href="#">Admin</a></li>
		    				</ul>
		    			</div>
		    			<div class="image group">
				<div class="grid ~/images/_3_of_1">
					<img src="@item.image" >
				</div>
                            <br />
				<div class="grid span_2_of_3">
			
          @Html.ActionLink("READ MORE ", "Blogsingle1",new { id=item.Id }, new { @class = "btn btn-default" })

 </div>
		   </div>
		   @Html.ActionLink("EDIT ", "editblog",new { id=item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("DELETE ", "Deleteblog",new { id=item.Id }, new { @class = "btn btn-default" })
                    
		    		</div></div>
                    }

<div id='Paging' style="text-align:center">

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("blog", new { page }))
    
    </div>
      @Styles.Render("~/Content/PagedList.css")