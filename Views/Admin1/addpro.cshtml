@model shopping.Models.prouduct
<!DOCTYPE 
<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    
	  <script src="http://tristanedwards.me/u/SweetAlert//lib/sweet-alert.js"></script>
<link rel="stylesheet" type="text/css" href="http://tristanedwards.me/u/SweetAlert//lib/sweet-alert.css">

<html lang="en">
 <head>
    <title></title>

	@if (TempData["Success"] != null)
{
<script >
    swal("@TempData["Success"]", "", "success")
</script>
}
	
	
</head>
    <body>
          
        <div id="page-wrapper">

 <div class="jumbotron">
                    <h1>ADD A NEW PRODUCT !</h1>
                </div>	
@using (Html.BeginForm("addpro", "Admin1", FormMethod.Post,
                               new { enctype = "multipart/form-data" }))
                               {
   
       @Html.ValidationSummary(true)
                 
                        	<div class="form-group editor-field">
                                NAME :
              @Html.TextBoxFor(model => model.name, new { @placeholder = "name",@class = "form-control",@style="width :100%" })
                        	@Html.ValidationMessageFor(Model=>Model.name)
                            </div>
                    
                        	<div class="form-group editor-field">
                                PRICE :
              @Html.TextBoxFor(model => model.price, new { @placeholder = "PRICE",@class = "form-control",@style="width :100%" })
                        	@Html.ValidationMessageFor(Model=>Model.price)
                            </div>
                    
                        	<div class="form-group editor-field">
                                Description :

              @Html.TextAreaFor(model => model.description, new { @placeholder = "decription",@class = "form-control",@style="width :auto" })
                        	@Html.ValidationMessageFor(Model=>Model.description)
                            </div>
    
    	<div class="form-group editor-field">
       Category :
                 @Html.DropDownList("list")
    </div>
                        	<div class="form-group editor-field">
			ADD IMAGE :
                                <p>
                                         <input  type="file" name ="file" / required>

                                </p>
                            </div>
    <div class="form-group editor-field">
            <button type="submit" class="btn btn-1">Create</button>
        </div>
}
                    </div>
                </div>
            </div>
        </div>
        </body></html>
<div>
    @Html.ActionLink("Back to List", "Admin")
</div>

