
@using PagedList.Mvc
@model PagedList.IPagedList<shopping.Models.deal>


<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>

<!DOCTYPE html>

<html lang="en">
 <head>
    <title>/title>
</head>
        <body>
                                     <div class="jumbotron">
                    <h1>deal are !</h1>
                </div>
    
        <div id="page-wrapper">

            <div class="container-fluid">
                                <div class="row">
                    <div class="col-lg-12">

    	<div class="section group">
				<div class="row">
		
               @foreach (var item in Model)
               {  
		
		    	<div class="grid_1_of_4 images_1_of_4 products-info">
					 <img src="@item.image"  />
                    @Html.ActionLink("EDIT ", "editproducts",new { id=item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("DETAILS ", "detailprouduct",new { id=item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("DELETE ", "Deletepro",new { id=item.Id }, new { @class = "btn btn-default" })
                    
                    
                       
             </div>  
                 
    }
                    
	   
		    </div>
          </body></html>     
  

<div id='Paging' style="text-align:center">

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("deals", new { page }))
    
    </div>

      @Styles.Render("~/Content/PagedList.css")