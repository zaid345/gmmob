@model shopping.Models.deal
<!DOCTYPE html>

<html lang="en">
 <head>
    <title></title>

	
	
</head>
    <body>
          
        <div id="page-wrapper">

 <div class="jumbotron">
                    <h1>ADD  NEW PRODUCT to deals !</h1>
                </div>	
@using (Html.BeginForm("addDeals", "Admin1", FormMethod.Post,
                               new { enctype = "multipart/form-data" }))
                               {
   
       @Html.ValidationSummary(true)
                 
                        	<div class="form-group editor-field">
                                NAME :
              @Html.TextBoxFor(model => model.name, new { @placeholder = "name",@class = "form-control",@style="width :100%" })
                        	@Html.ValidationMessageFor(Model=>Model.name)
                            </div>
                    
                        	<div class="form-group editor-field">
                                PRICE :
              @Html.TextBoxFor(model => model.price, new { @placeholder = "PRICE",@class = "form-control",@style="width :100%" })
                        	@Html.ValidationMessageFor(Model=>Model.price)
                            </div>
                    
                        	<div class="form-group editor-field">
                                Description :

              @Html.TextAreaFor(model => model.description, new { @placeholder = "decription",@class = "form-control",@style="width :auto" })
                        	@Html.ValidationMessageFor(Model=>Model.description)
                            </div>
    
    	<div class="form-group editor-field">
       Category :
                 @Html.DropDownList("list")
    </div>
                        	<div class="form-group editor-field">
			ADD IMAGE :
                                <p>
                                         <input  type="file" name ="file" / required>

                                </p>
                            </div>
    <div class="form-group editor-field">
            <button type="submit" class="btn btn-1">Create</button>
        </div>
}
                    </div>
                </div>
            </div>
        </div>
        </body></html>
<div>
    @Html.ActionLink("Back to List", "Admin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
